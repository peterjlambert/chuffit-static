---
layout: main
---
<main role="main" class="mainContent">
    <header class="mainHeader">
      <h1 itemprop="name" class="mainHeader__headline">{{ title }}</h1>
    </header>
    <article role="article" itemscope itemtype="http://schema.org/BlogPosting" class="post">
      <p class="meta">
        <time datetime="{{ date | dateToISO }}" itemprop="datePublished" title="{{ date | niceDate }}" pubdate class="meta__pubDate">{{ date | niceDate }}</time>
        / <span class="meta__stats">About {{ content |Â readingTime }} reading time</span>
      </p>
      <div class="post__body" itemprop="articleBody">
        {{ content | safe }}
      </div>
    </article>
</main>
